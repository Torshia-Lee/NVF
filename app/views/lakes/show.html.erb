<% content_for :javascript do %>
  <script type="module">
    import "refresh";
  </script>
<% end %>

<p style="color: green"><%= notice %></p>

<%= render @lake %>


<div class="d-flex justify-content-between mb-3">
  <div class="text-center">
    <%= link_to "Edit this Lake", edit_lake_path(@lake), class: "btn btn-warning" %>
  </div>
  <div>
    <%= button_to "Destroy this lake", @lake, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger", id: "show-destroy" %>
  </div>
</div>
<hr>
<div class="container my-4">
  <div class="card">
    <div class="card-header bg-primary text-white">
      <h2>Comments</h2>
    </div>
    <div class="card-body">
      <div class="list-group">
        <%= render @lake.comments %>
      </div>
    </div>
  </div>
  <div class="card mt-3">
    <div class="card-header bg-secondary text-white">
      <h4>Add a comment:</h4>
    </div>
    <div class="card-body">
      <%= render "comments/form", lake: @lake %>
    </div>
  </div>
</div>

<div>
    <%= link_to "Back to lakes", lakes_path, class: "btn btn-secondary me-2", id: "show-page-back-link" %>
  </div>

