<% content_for :javascript do %>
  <script type="module">
    import "map";
  </script>
<% end %>

<p style="color: green"><%= notice %></p>

<% content_for :title, "Lakes" %>

<div id="lake-nearby">
      <input id="user-input" type="text" placeholder="(City, State)" />
      <input id="submit" type="button" value="Search for lakes nearby" />
    </div>
<div id="map"></div>

<h1>Lakes</h1>

<div id="lakes">
  <% @lakes.each do |lake| %>
    <%= render lake %>
    <p>
      <%= link_to "Show this lake", lake %>
    </p>
  <% end %>
</div>



<%= link_to "New lake", new_lake_path %>



