  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="text-center">
    <%= form.submit "Save Lake", class: "btn btn-primary" %>
  </div>
<% end %>

