<div id="<%= dom_id comment %>">
  <p>
    <strong>User:</strong>
    <%= comment.user.first_name %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= comment.body %>
  </p>

  <p>
    <%= button_to "Destroy Comment", [comment.lake, comment], method: :delete, data: { confirm: "Are you sure?" } %>
  </p>
</div>
