<p style="color: green"><%= notice %></p>

<%= render @favorite %>

<div class="text-center">
  <%= link_to "Edit this Favorite", edit_favorite_path(@favorite), class: "btn btn-warning" %>
</div>

<hr>

<div class="d-flex justify-content-between align-items-center">
  <div>
    <%= link_to "Back to favorites", favorites_path, class: "btn btn-secondary" %>
  </div>
  <div>
    <%= button_to "Destroy this favorite", @favorite, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
  </div>
</div>

