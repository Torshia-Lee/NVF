<p style="color: green"><%= notice %></p>

<% content_for :title, "Fishing logs" %>

<h1>Fishing logs</h1>

<div class="container-fluid">
  <div class="row">
    <% @fishing_logs.each do |fishing_log| %>
      <div class="col-md-4 mb-4">
        <div class="card mb-4 shadow">
          <%= render fishing_log %>
          <p>
            <%= link_to "Show this fishing log", fishing_log %>
          </p>
        </div>
      </div>
    <% end %>  
  </div>
</div>






<%= will_paginate @fishing_logs %>

<%= link_to "New fishing log", new_fishing_log_path %>
