<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-login' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-5 w-75">
      <h2 class="h3 mb-3 fw-normal text-center">Please Log In</h2>
      <div class="card-body">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mb-3' %>

        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control mb-3' %>

        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <%= f.label :remember_me, class: 'form-check-label' %>
          </div>
        <% end %>

        <div class="form-group text-center">
          <%= f.submit "Log in", class: 'btn btn-primary btn-block' %>
        </div>
      </div>
    </div>
  </div>

<% end %>










